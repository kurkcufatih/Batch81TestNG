<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="basePath">target/logs</Property>
    </Properties>
    <Appenders>
        <RollingFile name="file"
                     filePattern="${basePath}/TechProEd-%d{HH-mm-ss.SSS}.log">
            <PatternLayout>
                <pattern>%d %p %c{1.} [%t] %m%n</pattern>
            </PatternLayout>
            <SizeBasedTriggeringPolicy size="500"/>
        </RollingFile>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!--Bu kisim Root Level daki varsayilan ayarlari override etmek
         /guncellemek/customize etmek icin kullaniriz.
         Bu ornekte ilk logger ayari sadece tests.log4J.Log4JTest2 icin.
         -->
        <Logger name="tests.log4J.Log4JTest2" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="file"/>
        </Logger>
        <!--Root level= tum siniflara otomatik uygulanan ayar -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>
</Configuration>